<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="userData"
            type="com.bignerdranch.travelcommunity.data.db.entity.User" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/innerLayout"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/headPortraitUrl"
        imageFromUrl="@{userData.headPortraitUrl}"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginStart="56dp"
        android:layout_marginTop="29dp"
        android:src="@mipmap/abc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/myNickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{userData.nickName}"
        android:textAppearance="@style/UserDescriptionText"
        app:layout_constraintBottom_toBottomOf="@+id/headPortraitUrl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.34"
        app:layout_constraintStart_toEndOf="@+id/headPortraitUrl"
        app:layout_constraintTop_toTopOf="@+id/headPortraitUrl" />

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>