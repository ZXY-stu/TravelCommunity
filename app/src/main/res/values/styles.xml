    <!--播放器进度条的styles-->
    <style name="SeekBarAppTheme">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:focusable">true</item>
        <item name="android:progressDrawable">
            @drawable/jky_player_progressbar
        </item>
        <item name="android:thumb">@drawable/ic_circles</item>
        <item name="android:minHeight">5dip</item>
        <item name="android:maxHeight">5dip</item>
        <item name="android:paddingLeft">5.0dip</item>
        <item name="android:paddingRight">5.0dip</item>
    </style>


    <style name="MyAnimDialog" parent="android:Theme.Dialog">
        <!-- 背景颜色及透明程度 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否半透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 是否没有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否背景模糊 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 设置背景模糊的透明度-->
        <item name="android:backgroundDimAmount">0.5</item>
        <!-- 动画 -->
        <item name="android:windowAnimationStyle">@style/dialog_animation_bottom</item>
    </style>


    <style name="DialogFullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--导航栏底色-->
        <item name="colorPrimary">#FFFFFF</item>
        <!--状态栏底色-->
        <item name="colorPrimaryDark">#FFFFFF</item>

        <!--导航栏上的标题颜色,这里的颜色还可以自己定义喜欢的类型-->
        <item name="android:textColorPrimary">@color/white</item>

        <item name="android:background">@color/white</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <!--Activity窗口的颜色,注意：这个颜色值要通过color属性引进来-->
        <item name="android:windowBackground">@color/white</item>
        <!--按钮选中或者点击获得焦点后的颜色-->
        <item name="colorAccent">@color/white</item>
        <!--和 colorAccent相反，正常状态下按钮的颜色,如果我们的colorPrimary是深色，一般设置这里为白色-->
        <item name="colorControlNormal">#fff</item>
        <!--Button按钮正常状态颜色,根据项目来定义-->
        <item name="colorButtonNormal">@color/gray</item>
        <!--EditText 输入框中字体的颜色，colorPrimary如果设置深色，一般字体设置为白色-->
        <item name="editTextColor">@android:color/white</item>
        <item name="android:windowIsFloating">false</item>
        <item name="windowActionBar">true</item>								//取消系统默认的actionBar
        <item name="windowNoTitle">true</item>									//取消actionBar的标题
        <item name="android:windowTranslucentStatus">true</item>				//允许页面可以拉伸到顶部状态栏并且定义顶部状态栏透明，安卓4.4才有
        <item name="android:windowTranslucentNavigation">true</item>			//设置虚拟键透明

    </style>

    <style name="DialogFullScreen_Bottom" parent="DialogFullScreen">
        <!-- 动画 -->
        <item name="android:windowAnimationStyle">@style/dialog_animation_bottom</item>
    </style>


    <style name="DialogFullScreen_Right" parent="DialogFullScreen">
        <!-- 动画 -->
        <item name="android:windowAnimationStyle">@style/dialog_animation_right</item>
    </style>

    <!-- 对话框显示和退出动画 -->
    <style name="dialog_animation_bottom">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_exit</item>
    </style>

    <!-- 对话框显示和退出动画 -->
    <style name="dialog_animation_right">
        <item name="android:windowEnterAnimation">@anim/dialog_right_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_right_exit</item>
    </style>

</resources>
