    <style name="MyProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dip</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/progress</item>
    </style>


    <style name="publish_editText_style" parent="Theme.AppCompat.Light">
        <!--未被选中时下划线的颜色-->
        <item name="colorControlNormal">@color/gray</item>
        <!--文本的颜色-->
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/white</item>
        <!--被选中时下划线的颜色-->
       <item name="android:textCursorDrawable">@drawable/cursor_color</item>
    </style>

    <style name="login_and_register_editText_style" parent="Theme.AppCompat.DayNight">
        <!--未被选中时下划线的颜色-->


        <!--文本的颜色-->
        <item name="android:textColorHint">@color/gray</item>

       <item name="android:lines">1</item>

        <item name="colorControlNormal">@android:color/darker_gray</item>

        <item name="colorControlActivated">@android:color/holo_orange_dark</item>


        <!--被选中时下划线的颜色-->
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
    </style>



    <style name="Widget.App.ActionButton" parent="@style/Widget.AppCompat.ActionButton">
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
