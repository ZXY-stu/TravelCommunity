    <style name="UserAppbarLayout" parent="Widget.Design.AppBarLayout">

        <item name="android:background">?attr/colorPrimary</item>

    </style>

    <style name="UserDescriptionText" parent="TextAppearance.AppCompat.Body1">

        <item name="android:textColor"> @color/white </item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="UserPageText" parent="TextAppearance.AppCompat.Body1">

        <item name="android:textColor"> @color/divider </item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="action_text" parent="TextAppearance.MaterialComponents.Body2">

        <item name="android:textColor"> @color/gray </item>
       <item name="android:textSize">@dimen/action_text</item>
    </style>

    <style name="UserCommentsText"  parent="TextAppearance.MaterialComponents.Body2">

        <item name="android:textColor"> @color/black</item>
        <item name="android:textSize">@dimen/commentsText</item>

    </style>

